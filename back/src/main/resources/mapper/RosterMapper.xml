<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.exrick.xboot.modules.your.mapper.RosterMapper">

    <select id="findById" resultType="cn.exrick.xboot.modules.your.entity.Roster">
      SELECT * FROM t_roster
      WHERE id = #{id}
    </select>
    <select id="findByMobile" resultType="cn.exrick.xboot.modules.your.entity.Roster">
      SELECT * FROM t_roster
      WHERE mobile = #{mobile}
    </select>
</mapper>